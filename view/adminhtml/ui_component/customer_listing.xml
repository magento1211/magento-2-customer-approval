                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Approval Status</label>
            </settings>
        </column>-->
        <column name="is_approved" component="Magento_Ui/js/grid/columns/select" sortOrder="140">
            <settings>
                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <label translate="true">Approval Status</label>
            </settings>
        </column>
    </columns>
</listing>

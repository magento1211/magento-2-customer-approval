<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="massapprove">
                <settings>
                    <url path="mpcustomerapproval/index/massApprove"/>
                    <type>approve</type>
                    <label translate="true">Approve</label>
                </settings>
            </action>
            <action name="massnotapprove">
                <settings>
                    <url path="mpcustomerapproval/index/massNotApprove"/>
                    <type>notapprove</type>
                    <label translate="true">Not Approve</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="customer_columns" class="Magento\Customer\Ui\Component\Listing\Columns">

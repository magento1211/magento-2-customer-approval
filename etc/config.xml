<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mpcustomerapproval>
            <general>
                <enabled>1</enabled>
                <message_after_register>Your account required approval</message_after_register>
                <error_message>Your account is not approved</error_message>
            </general>
            <admin_notification_email>
                <enabled>1</enabled>
                <sendto>admin@gmail.com</sendto>
            </admin_notification_email>
            <customer_notification_email>
                <sender>sales</sender>
                <customer_success_email>
                    <enabled>1</enabled>
                </customer_success_email>
                <customer_approve_email>
                    <enabled>1</enabled>
                </customer_approve_email>
                <customer_not_approve_email>
                    <enabled>1</enabled>
                </customer_not_approve_email>
            </customer_notification_email>
        </mpcustomerapproval>
    </default>
</config>
